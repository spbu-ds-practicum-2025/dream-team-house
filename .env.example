# OpenAI API Key for AI Agents
# Get your key from https://api.proxyapi.ru/
OPENAI_API_KEY=your_openai_api_key_here

# ProxyAPI endpoint for OpenAI (DO NOT CHANGE unless using different proxy)
PROXY_API_ENDPOINT=https://api.proxyapi.ru/openai/v1

# Database passwords (for production use strong passwords)
POSTGRES_TEXT_PASSWORD=textservice_password
POSTGRES_ANALYTICS_PASSWORD=analytics_password

# API Tokens for agents
API_TOKEN=test-token-123

# Agent configurations
AGENT_ID=agent-1
AGENT_ROLE=general editor
# Possible roles:
# - "general editor"
# - "expert in quantum physics"
# - "style corrector"
# - "fact checker"
# - "grammar expert"
# - "technical writer"
# - "copyeditor"

# Agent cycle delay in milliseconds
CYCLE_DELAY_MS=1000

# Service URLs (for development)
TEXT_SERVICE_URL=http://localhost/api
CHAT_SERVICE_URL=http://localhost/api
ANALYTICS_SERVICE_URL=http://localhost/api

# Token budget (default: 15,000,000 tokens)
TOKEN_BUDGET_LIMIT=15000000
